///////////////////////////////////////////////////////////////////////////
// Amulet of Seldarine                                                   //
// Magic Resistance increased to +25%                                    //
///////////////////////////////////////////////////////////////////////////
ACTION_IF FILE_EXISTS_IN_GAME ~AMUL27.ITM~ BEGIN
OUTER_SPRINT oldamul1  @33400
OUTER_SPRINT newamul1  @33401

    COPY_EXISTING ~AMUL27.ITM~ ~override~ 
      LPF ALTER_EFFECT INT_VAR check_globals = 1 match_opcode = 166 parameter1 = 25 END

      READ_LONG 0x54 desc_strref
          PATCH_IF (desc_strref >= 0 && desc_strref < 2147483646) BEGIN
            READ_STRREF 0x54 desc
            INNER_PATCH_SAVE desc ~%desc%~ BEGIN
              REPLACE_TEXTUALLY ~%oldamul1%~ ~%newamul1%~
            END
            SAY_EVALUATED 0x54 ~%desc%~
          END
END

///////////////////////////////////////////////////////////////////////////
// Greenstone Amulet                                                     //
// Once Per Day Use Item                                                 //
///////////////////////////////////////////////////////////////////////////
ACTION_IF FILE_EXISTS_IN_GAME ~AMUL17.ITM~ BEGIN
OUTER_SPRINT oldamul2  @33402
OUTER_SPRINT newamul2  @33403

    COPY_EXISTING ~AMUL17.ITM~ ~override~ 
      LPF ALTER_ITEM_HEADER INT_VAR header_type = 3 charges = 1 drained = 3 flag_recharge = 1 END

      READ_LONG 0x54 desc_strref
          PATCH_IF (desc_strref >= 0 && desc_strref < 2147483646) BEGIN
            READ_STRREF 0x54 desc
            INNER_PATCH_SAVE desc ~%desc%~ BEGIN
              REPLACE_TEXTUALLY ~%oldamul2%~ ~%newamul2%~
            END
            SAY_EVALUATED 0x54 ~%desc%~
          END

    COPY_EXISTING_REGEXP GLOB ~^.+\.sto$~ ~override~
    READ_LONG 0x34 sale_off  ELSE 0
    READ_LONG 0x38 sale_num  ELSE 0
    READ_LONG 0x2c itm_off   ELSE 0
    READ_LONG 0x4c drink_off ELSE 0
    READ_LONG 0x70 cure_off  ELSE 0
    FOR (index = 0 ; index < sale_num ; ++index) BEGIN
      READ_ASCII (sale_off +        (index * 0x1c)) item
      PATCH_IF ("%item%" STRING_COMPARE_REGEXP "^_?[Aa][Mm][Uu][Ll]17$" = 0) BEGIN // Greenstone Amulet
        //WRITE_SHORT (sale_off + 0x0a + (index * 0x1c)) 1
        REMOVE_STORE_ITEM ~amul17~
        ADD_STORE_ITEM ~amul17~ AT ~%index%~ #1 #0 #0 ~IDENTIFIED~ #1
      END
    END
    BUT_ONLY

    COPY_EXISTING ~ar2101.are~ ~override~
      LPF REPLACE_AREA_ITEM INT_VAR charges1=1 STR_VAR old_item=amul17 new_item=amul17 END

    PATCH_IF FILE_EXISTS_IN_GAME ~MINSC7_.CRE~ BEGIN
      COPY_EXISTING ~MINSC7_.CRE~ ~override~
        REPLACE_CRE_ITEM ~AMUL17~ #1 #0 #0 ~UNSTEALABLE~ ~AMULET~ EQUIP
    END

END

