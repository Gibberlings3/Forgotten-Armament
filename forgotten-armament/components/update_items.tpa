            WRITE_SHORT  (abil_off + 0x22 + (index * 0x38)) 0           // no charges             
          END 
        END
      END
      PATCH_IF inserted BEGIN
        WRITE_SHORT 0x68 abil_num
        WRITE_LONG  0x6a (THIS + 0x38)
      END
