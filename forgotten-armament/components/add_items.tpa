// Forgotten Armament - Create New Items

///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////
// Create New Items - BG:EE or BGEET                                     //
///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////

ACTION_IF (GAME_IS ~bgee eet~) BEGIN
///////////////////////////////////////////////////////////////////////////
// Creates Dojigiri +2 - Katana                                          //
///////////////////////////////////////////////////////////////////////////

    COPY ~houserules/itm/MO1H55.ITM~ ~override/MO1H55.ITM~
        SAY NAME1 @2000
        SAY NAME2 @2002
        SAY UNIDENTIFIED_DESC @2001
        SAY DESC @2003

///////////////////////////////////////////////////////////////////////////
// Creates Bastard Sword +2 - Bastard Sword                              //
///////////////////////////////////////////////////////////////////////////

    COPY ~houserules/itm/MO1H42.ITM~ ~override/MO1H42.ITM~
        SAY NAME1 @2010
        SAY NAME2 @2012
        SAY UNIDENTIFIED_DESC @2011
        SAY DESC @2013

///////////////////////////////////////////////////////////////////////////
// Creates Spear +2 - Spear                                              //
///////////////////////////////////////////////////////////////////////////

    COPY ~houserules/itm/MOSP01.ITM~ ~override/MOSP01.ITM~
        SAY NAME1 @2020
        SAY NAME2 @2022
        SAY UNIDENTIFIED_DESC @2021
        SAY DESC @2023

///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////
// Assign New Items - BG:EE or BGEET                                     //
///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////
// Assigns Dojigiri +2 to Meilum                                         //
///////////////////////////////////////////////////////////////////////////

    COPY_EXISTING ~MEILUM.CRE~ ~override~
        SET_BG2_PROFICIENCY ~PROFICIENCYKATANA~ 4
        REPLACE_CRE_ITEM ~MO1H55~ #0 #0 #0 ~UNSTEALABLE~ ~WEAPON1~ EQUIP

///////////////////////////////////////////////////////////////////////////
// Assigns Spear +2 to Seniyad                                           //
///////////////////////////////////////////////////////////////////////////

    COPY_EXISTING ~SENIYA.CRE~ ~override~
        SET_BG2_PROFICIENCY ~PROFICIENCYSPEAR~ 1
        REPLACE_CRE_ITEM ~MOSP01~ #0 #0 #0 ~UNSTEALABLE~ ~WEAPON1~ EQUIP

///////////////////////////////////////////////////////////////////////////
// Assigns Bastard Sword +2 to Person                                    //
///////////////////////////////////////////////////////////////////////////

    COPY_EXISTING ~GORWOM06.CRE~ ~override~
        SET_BG2_PROFICIENCY ~PROFICIENCYKATANA~ 5
        ADD_CRE_ITEM ~MO1H75~ #0 #0 #0 ~UNSTEALABLE~ ~WEAPON1~ EQUIP

///////////////////////////////////////////////////////////////////////////
// Assigns Spear +2 to Person                                            //
///////////////////////////////////////////////////////////////////////////

    COPY_EXISTING ~GORWOM06.CRE~ ~override~
        SET_BG2_PROFICIENCY ~PROFICIENCYKATANA~ 5
        ADD_CRE_ITEM ~MO1H75~ #0 #0 #0 ~UNSTEALABLE~ ~WEAPON1~ EQUIP
END

///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////
// Create New Items - BG II:EE or BGEET                                  //
///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////

ACTION_IF (GAME_IS ~bg2ee eet~) BEGIN
///////////////////////////////////////////////////////////////////////////
// Creates Onimaru Kunitsuna +5 Katana                                   //
///////////////////////////////////////////////////////////////////////////

    COPY ~houserules/itm/MO1H75.ITM~ ~override/MO1H75.ITM~
        SAY NAME1 @2000
        SAY NAME2 @2030
        SAY UNIDENTIFIED_DESC @2001
        SAY DESC @2031

///////////////////////////////////////////////////////////////////////////
// Creates Large Shield of Strength +1 from IWDEE                        //
///////////////////////////////////////////////////////////////////////////

    COPY ~houserules/itm/USHLD4A.ITM~ ~override/USHLD4A.ITM~
        SAY NAME1 @2040
        SAY NAME2 @2042
        SAY UNIDENTIFIED_DESC @2041
        SAY DESC @2043

///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////
// Assign New Items - BG II:EE or BGEET                                  //
///////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////
// Assigns Onimaru Kunitsuna +5 to Xei Win Toh                           //
///////////////////////////////////////////////////////////////////////////

    COPY_EXISTING ~GORWOM06.CRE~ ~override~
        SET_BG2_PROFICIENCY ~PROFICIENCYKATANA~ 5
        ADD_CRE_ITEM ~MO1H75~ #0 #0 #0 ~UNSTEALABLE~ ~WEAPON1~ EQUIP

///////////////////////////////////////////////////////////////////////////
// Gives Joluv Large Shield of Strength +1 to sell                       //
///////////////////////////////////////////////////////////////////////////

    COPY_EXISTING ~WMART1.STO~ ~override~
        ADD_STORE_ITEM ~USHLD4A~ #0 #0 #0 ~IDENTIFIED~ #1

END